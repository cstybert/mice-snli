{
    "train_data_path": "train",
    "test_data_path": "test",
    "evaluate_on_test": true,
    "dataset_reader":{
        "type": "micesnli",
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "roberta-large",
            "max_length": 512
        },
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "model_name": "roberta-large",
                "max_length": 512
            }
        }
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size" : 32
        }
    },
    "model": {
        "type": "basic_classifier",
        "namespace": "tags",
        "seq2vec_encoder": {
            "type": "bert_pooler",
            "dropout": 0.1,
            "pretrained_model": "roberta-large"
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "pretrained_transformer",
                    "model_name": "roberta-large",
                    "max_length": 512
                }
            }
        }
    },
    "trainer": {
        "num_epochs": 3,
        "num_gradient_accumulation_steps": 16,
        "validation_metric": "+accuracy",
        "learning_rate_scheduler": {
            "type": "slanted_triangular",
            "cut_frac": 0.06
        },
        "optimizer": {
            "type": "huggingface_adamw",
            "lr": 2e-5,
            "weight_decay": 0.1
        }
    }
}